<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- 레이아웃 정의 - 변하지 않는 부분들로 구성된 페이지를 템플릿으로 선언 -->
    <definition name="base" template="/WEB-INF/jsp/semi/tiles/template.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/semi/tiles/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/semi/tiles/footer.jsp"/>
        <put-attribute name="modal" value="/WEB-INF/jsp/semi/tiles/modal.jsp"/>
    </definition>

    <!-- 메인영역에 보여줄 페이지를 url 요처앙법에 따라 구분해 둠
         메인영역을 제외한 나머지 영역은 위에서 정의한 템플릿을 참조함
         url :/index.tiles => main :/semi.jsp
         *이 지금은 하나지만, 여러개 일 경우, {1}, {2} 이런식으로 사용한다.-->
    <definition extends="base" name="*.tiles">
        <put-attribute name="main" value="/WEB-INF/jsp/semi/{1}.jsp"/>

    </definition>


    <!-- url :/join/agree.tiles => :/WEB-INF/jsp/join/agree.jsp -->
    <!-- url :/board/agree.tiles => :/WEB-INF/jsp/board/agree.jsp -->
    <definition extends="base" name="*/*.tiles">
        <put-attribute name="main" value="/WEB-INF/jsp/semi/{1}/{2}.jsp"/>

    </definition>

</tiles-definitions>